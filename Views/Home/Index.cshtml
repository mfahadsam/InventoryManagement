@model List<InventoryManagement.Models.Allotment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<h1 style="text-align:center;">Shop Product Here !</h1>

<form asp-action="Create" method="post" data-ajax="true" data-ajax-begin="onAjaxBegin" data-ajax-complete="onAjaxComplete">
    <div class="row">
        <div class="col-md-8 offset-4">
            <div class="col-md-4">
                <label class="control-label">Customer Name</label>
                <select name="CustomerId" class="form-control mb-2" asp-items="@ViewBag.CustomerList">
                    <option value="-1">Select Customer</option>
                </select>
            </div>

            <div class="col-md-4">
                <label class="control-label">Product Name</label>
                <select name="ProductId" class="form-control" asp-items="@ViewBag.ProductList">
                    <option value="-1">Select Product</option>
                </select>
            </div>


            <div class="col-md-4 py-2 mb-1">
                <button type="submit" value="Create" class="btn btn-default btn-md float-right">
                    <span class="fa fa-shopping-cart" aria-hidden="true"></span> Sale Product
                </button>
            </div>

        </div>
    </div>
</form>

<div class="row mt-2">
    <div class="container">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>Allotment ID</th>
                    <th>Customer Name</th>
                    <th>Product Name</th>
                    <th>Created Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.AllotmentId</td>
                    <td>@item.Customer.CustomerName</td>
                    <td>@item.Product.Name</td>
                    <td>@item.CreatedDate</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AllotmentId" class="btn btn-primary">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.AllotmentId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>

                }
            </tbody>

        </table>
        


    </div>
</div>