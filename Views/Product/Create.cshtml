@model InventoryManagement.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/_Layout.cshtml";
}


<h1 class="ml-2">Create</h1>

<h4 class="ml-2">Product</h4>
<hr />
<div class="row">
    <div class="col-md-4 ml-2">


        <form asp-action="Create" data-ajax="true" data-ajax-begin="onAjaxBegin" data-ajax-complete="onAjaxComplete">

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalePrice" class="control-label"></label>
                <input asp-for="SalePrice" class="form-control" />
                <span asp-validation-for="SalePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qty" class="control-label"></label>
                <input asp-for="Qty" class="form-control" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                @*<select class="form-control" asp-items="ViewBag.CategroyList as SelectList">
                    </select>*@

                <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.CategoryList,"CategoryId","Name"))">
                    <option>---Please Select---</option>
                </select>

                <!--<select class="form-control" id="categorys">-->
                @*<option>---Please Select---</option>*@
                <!--</select>-->
            </div>
            <div class="form-group">
                <label asp-for="BrandId" class="control-label"></label>
                <select asp-for="BrandId" class="form-control" asp-items="@(new SelectList(ViewBag.BrandList,"BrandId","Name"))">
                    <option>---Please Select---</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

